{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ debug build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-DLOCAL",
                "-D_GLIBCXX_DEBUG",
                "-D_GLIBCXX_DEBUG_PEDANTIC",
                "-pedantic",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-Wlogical-op",
                "-Wduplicated-cond",
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "type": "shell",
            "label": "g++ release build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-DLOCAL",
                "-D_FORTIFY_SOURCE=2",
                "-O3",
                "-s",
                "-DNDEBUG",
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "type": "shell",
            "label": "clang++ debug build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-DLOCAL",
                "-MD",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-std=c++17",
                "-g0",
                "-ggdb",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/clang++"
        },
        {
            "type": "shell",
            "label": "clang++ release build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-DLOCAL",
                "-D_FORTIFY_SOURCE=2",
                "-O3",
                "-s",
                "--optimize",
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/clang++"
        }
    ]
}